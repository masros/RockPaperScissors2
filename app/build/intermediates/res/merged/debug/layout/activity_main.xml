<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.rockpaperscissors2.MainActivity"
   >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#4af24a"
        android:textAlignment="center"
        android:id="@+id/linearLayout2">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds">

            <TextView
                style="1"
                android:id="@+id/textView4"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="#FF0000"
                android:layout_weight="0.14"
                android:textAlignment="center"
                android:text="WINS"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView5"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0.10"
                android:background="#00FF00"
                android:textAlignment="center"
                android:text="TIES"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView6"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0.14"
                android:background="#0000FF"
                android:textAlignment="center"
                android:text="WINS"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count1"
                android:background="#ec8b8b"
                android:backgroundTintMode="screen"
                android:src="@drawable/n0"
                android:layout_gravity="left"
                android:layout_row="2"
                android:layout_column="0" />

            <ImageView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:id="@+id/count2"
                android:background="#ea8585"
                android:src="@drawable/n0"
                android:layout_gravity="center_horizontal"
                android:layout_row="2"
                android:layout_column="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count3"
                android:background="#eb8585"
                android:src="@drawable/n0"
                android:layout_gravity="right"
                android:layout_row="2"
                android:layout_column="2" />

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#ecec21"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2be883"
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2">

        <GridLayout
            android:layout_width="356dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock"
                android:id="@+id/btnRock"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="left" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper"
                android:id="@+id/btnPaper"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center" />

        </GridLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:src="@drawable/r1"
        android:background="#4855b6"
        android:contentDescription="R_imgView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/h1"
        android:layout_above="@+id/linearLayout3"
        android:background="#ee4242" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scissors"
        android:id="@+id/btnScissors"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

</RelativeLayout>
